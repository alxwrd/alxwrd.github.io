---
import { Avatar, Navigation } from "../components/ui";
import BaseLayout from "../layouts/BaseLayout.astro";

const description =
  "Hello - I'm Alex 👋. A software engineer from Nottingham, UK!";
const permalink = Astro.site.href;
---

<BaseLayout description={description} permalink={permalink}>
  <section class="w-full">
    <h1 class="font-['Lobster'] text-7xl text-center my-4 md:my-8">
      Alex Ward
    </h1>
    <aside class="sm:float-right mx-auto">
      <Navigation align="center" />
      <Avatar />
    </aside>
    <div class="text-xl text-neutral-700">
      <p>Hello - I'm Alex 👋</p>
      <p>I'm a software engineer based in Nottingham 🏹 in the UK.</p>
      <p>
        I've been in software for almost 8 years - originally coming from a
        background of call-center and customer service!
      </p>

      <p>
        Currently, I am a software engineer at
        <a href="https://deepsea.ai">DeepSea</a>.
      </p>

      <p>
        In my free time, you can find me either:
        <ul>
          <li>mountain biking</li>
          <li>bouldering</li>
          <li>making and playing video games</li>
          <li>or spending time with my family.</li>
        </ul>
      </p>
    </div>
  </section>
</BaseLayout>
