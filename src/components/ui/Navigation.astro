---
const links = [
    { href: "/blog/", text: "blog" },
    { href: "/projects/", text: "projects" },
    { href: "https://github.com/alxwrd", text: "github" },
    { href: "https://cv.alxwrd.co.uk/", text: "cv" },
];

export interface Props {
    align?: "center" | "left" | "right";
}

const { align } = Astro.props;

const alignment = align ? [`text-${align}`] : ["sm:text-left", "text-center"];
---

<div class:list={["text-sm", "py-2", ...alignment]}>
    {
        links.map(({ href, text }) => (
            <>
                <p
                    class:list={[
                        "inline-block",
                        "transition",
                        "ease-in-out",
                        "duration-300",
                        "hover:scale-110",
                        Astro.url.pathname == href
                            ? "font-semibold"
                            : "font-normal",
                    ]}
                >
                    <a href={href}>{text}</a>
                </p>
                <span>
                    {href == links[links.length - 1].href ? "" : " Â· "}
                    &nbsp;
                </span>
            </>
        ))
    }
</div>
